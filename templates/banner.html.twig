<div class="container banner">
    <div class="row">
        <div class="col-12 p-0">
            <div class="banner-bg position-relative" style="background-image: url({{ banner.image }})">
                <div class="py-4 px-5 banner-body">
                    {% if banner.body is defined %}
                        {{ banner.body | raw }}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>