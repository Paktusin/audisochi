{% extends 'base.html.twig' %}

{% block container %}
    <div class="row">
        {% for type in types %}
            <div class="col-12 col-md-6 col-lg-4">
                <a href="{{ path('part_catalog',{type:type.id}) }}">
                    <div class="a-card">
                        <div class="bg" style="background-image: url({{ type.image | image }})">
                        </div>
                        <div class="a-body p-4">
                            <h6 class="a-header arrow">{{ type.name }}</h6>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
