{% extends 'base.html.twig' %}

{% block container %}
    <div class="row">
        {% for part in parts %}
            <div class="col-12 col-sm-6 col-md-4 mb-4">
                <a class="undec" href="{{ path('part_show',{id:part.id}) }}">
                    <div class="a-card">
                        <div class="bg" style="background-image: url({{ part.image | image }})">
                        </div>
                        <div class="a-body p-4">
                            <h6 class="a-header arrow part-name">{{ part.name }}</h6>
                        </div>
                    </div>
                    <p>{{ part.price }} руб.</p>
                </a>
                <button class="btn btn-secondary text-white" onclick="basket.addPart({{ part.id }},this)">
                    Добавить в
                    корзину
                </button>
            </div>
        {% endfor %}
    </div>
    <div id="modal" class="modal fade bd-example-modal-lg" tabindex="-1">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Закрыть">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-primary">Продолжить покупки</button>
                    <a class="btn btn-secondary" href="{{ path('part_ticket') }}">Перейти в корзину</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

