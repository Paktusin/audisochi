{% extends 'base.html.twig' %}

{% block container %}
    <div class="row">
        <div class="col-12">
            <h4 class="a-header arrow part-name">{{ part.name }}</h4>
            {% if part.image | length > 0 %}
                <img class="img-fluid col-12 col-sm-6 col-md-4 p-4 float-left" src="{{ part.image | image }}">
            {% endif %}
            <p>{{ part.description | raw }}</p>
            <p>{{ part.price }} руб.</p>
            <button class="btn btn-secondary text-white" onclick="basket.addPart({{ part.id }},this)">
                Добавить в
                корзину
            </button>
        </div>
    </div>
    <div id="modal" class="modal fade bd-example-modal-lg" tabindex="-1">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Закрыть">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-primary">Продолжить покупки</button>
                    <a class="btn btn-secondary" href="{{ path('part_ticket') }}">Перейти в корзину</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

