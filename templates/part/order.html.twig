{% if parts | length >0 %}
    <ul class="list-group">
        {% for part in parts %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{ part.name }} - {{ counts[part.id] }} шт.
                <button type="button" onclick="removePart(id,this)" class="btn badge badge-secondary badge-pill">Х
                </button>
            </li>
            <input type="hidden" name="parts[][{{ part.id }}][id]" value="{{ part.id }}"/>
            <input type="hidden" name="parts[][{{ part.id }}][cnt]" value="{{ counts[part.id] }}"/>
        {% endfor %}
    </ul>
{% else %}
    <span class="list-group-item">Список товаров пуст</span>
{% endif %}